{
  "name": "podman-desktop-extension-macadam",
  "displayName": "Macadam",
  "description": "Integration for macadam: a tool to create/start linux VM on any OS",
  "version": "0.0.1",
  "icon": "icon.png",
  "license": "Apache-2.0",
  "publisher": "redhat",
  "engines": {
    "podman-desktop": ">=1.10.0"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\"",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck:backend": "tsc --noEmit",
    "watch": "vite build -w"
  },
  "dependencies": {
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@podman-desktop/api": "1.14.2",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "globals": "^15.14.0",
    "electron": "^34.0.0",
    "eslint": "^9.18.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-file-progress": "^3.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-redundant-undefined": "^1.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  }
}
