{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "ES2017",
      "webworker",
    ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "types": [
      "node",
    ],
    "strict": true,
  },
  "include": [
    "src",
    "types/*.d.ts",
    "../../types/*.d.ts"
  ]
}
  